<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddKonsultasiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_bg"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parisienne"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Be the Melody in the\nsymphony of your beauty!!"/>

        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_box_konsultasi"
            android:padding="20dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi "
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/nameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agnes"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking sekarang jadwal konsultasimu!!"
                android:fontFamily="@font/lato_regular"
                android:textSize="12sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal"
                android:fontFamily="@font/lato_regular"
                android:textSize="11sp"
                android:textColor="@color/black"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_jadwal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/tv_tanggal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klik untuk mengatur tanggal"
                    android:textAlignment="center"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    />
            </FrameLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Jenis Konsultasi"
                android:fontFamily="@font/lato_regular"
                android:textSize="11sp"
                android:textColor="@color/black"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/custom_edit_text">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    />
            </FrameLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Keluhan"
                android:fontFamily="@font/lato_regular"
                android:textSize="11sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_detail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edit_text"
                android:hint="Detail Keluhan"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="13sp"
                android:lines="8"
                android:inputType="text|textMultiLine"
                android:scrollbars="vertical"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                />


            <FrameLayout
                android:id="@+id/btn_antrian"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_jadwal"
                android:layout_marginBottom="30dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat Nomor Antrian"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>